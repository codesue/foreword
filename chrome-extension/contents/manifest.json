{
	"manifest_version": 2,

	"name": "Foreword",
	"description": "Prescreens Swedish article, gives summary, defines words you don't know",
	"version": "1.0",

	"permissions": [
		"activeTab",
		"https://ajax.googleapis.com/",
		"contextMenus",
		"tabs",
		"http://*/*",
		"https://*/*"
	],		
	
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "Prescreen Article"
	},
	
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	
	"icons": { 
		"16": "icon.png",
		"48": "icon48.png"
	}
}

